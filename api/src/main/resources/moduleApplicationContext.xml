<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Add here beans related to the API context -->
    <bean id="pacsIntegrationService" class="${project.parent.groupId}.${project.parent.artifactId}.api.impl.PacsIntegrationServiceImpl">
        <property name="dao">
            <bean class="${project.parent.groupId}.${project.parent.artifactId}.api.db.hibernate.HibernatePacsIntegrationDAO">
                <property name="sessionFactory">
                    <ref bean="sessionFactory"/>
                </property>
            </bean>
        </property>
    </bean>
    <bean id="patientToPacsConverter" class="org.openmrs.module.pacsintegration.api.converter.PatientToPacsConverter" />


    <!-- Services accessible via Context.getService() -->
    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>${project.parent.groupId}.${project.parent.artifactId}.api.PacsIntegrationService</value>
                <bean
                        class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
                    <property name="transactionManager">
                        <ref bean="transactionManager"/>
                    </property>
                    <property name="target">
                        <ref bean="pacsIntegrationService" />
                    </property>
                    <property name="preInterceptors">
                        <ref bean="serviceInterceptors"/>
                    </property>
                    <property name="transactionAttributeSource">
                        <ref bean="transactionAttributeSource"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!-- register event listeners -->
    <bean id="patientEventListener" class="org.openmrs.module.pacsintegration.listener.PatientEventListener">
        <constructor-arg index="0">
            <ref bean="patientService" />
        </constructor-arg>
        <constructor-arg index="1">
            <ref bean="patientToPacsConverter" />
        </constructor-arg>
        <constructor-arg index="2">
            <ref bean="pacsIntegrationService"/>
        </constructor-arg>
    </bean>

    <bean class="org.openmrs.event.Event">
        <property name="subscription">
            <bean class="org.openmrs.module.pacsintegration.listener.OrderEventListener"></bean>
        </property>
    </bean>
    <bean class="org.openmrs.event.Event">
        <property name="subscription">
            <ref bean="patientEventListener" />
        </property>
    </bean>

</beans>
